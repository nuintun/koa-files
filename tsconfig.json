{
  "compileOnSave": false,
  "compilerOptions": {
    "pretty": true,
    "target": "ES6",
    "newLine": "LF",
    "module": "ESNext",
    "declaration": false,
    "alwaysStrict": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
