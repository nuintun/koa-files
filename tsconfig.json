{
  "compilerOptions": {
    "baseUrl": ".",
    "pretty": true,
    "strict": true,
    "newLine": "lf",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2018",
    "skipLibCheck": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "noImplicitOverride": true,
    "noUnusedParameters": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
