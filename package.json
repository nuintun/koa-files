{
  "name": "koa-files",
  "version": "3.2.1",
  "description": "A static files serving middleware for koa.",
  "type": "module",
  "main": "cjs/index.cjs",
  "module": "esm/index.js",
  "types": "types/index.d.ts",
  "exports": {
    "import": "./esm/index.js",
    "require": "./cjs/index.cjs",
    "types": "./types/index.d.ts"
  },
  "files": [
    "cjs",
    "esm",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuintun/koa-files.git"
  },
  "keywords": [
    "koa",
    "send",
    "serve",
    "server",
    "static",
    "service",
    "multipart",
    "middleware"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "author": {
    "name": "nuintun",
    "email": "nuintun@qq.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuintun/koa-files/issues"
  },
  "homepage": "https://github.com/nuintun/koa-files#readme",
  "scripts": {
    "test": "node tests",
    "lint": "tsc --noEmit",
    "clean": "node tools/clean.js",
    "prepublishOnly": "npm run build",
    "build:cjs": "rollup -c tools/rollup.cjs.js",
    "build:esm": "rollup -c tools/rollup.esm.js",
    "format": "prettier --write . --ignore-path .prettierignore",
    "build": "npm run clean && npm run build:main && npm run format",
    "build:main": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --declarationDir types && node tools/fix-types.js"
  },
  "dependencies": {
    "etag": "^1.8.1",
    "range-parser": "^1.2.1",
    "tslib": "^2.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/etag": "^1.8.3",
    "@types/koa": "^2.15.0",
    "@types/range-parser": "^1.2.7",
    "koa": "^2.15.3",
    "magic-string": "^0.30.12",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.24.3",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "koa": "^2.0.0"
  }
}
