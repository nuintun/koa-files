{
  "name": "koa-files",
  "version": "4.1.5",
  "description": "A static files serving middleware for koa.",
  "type": "module",
  "main": "cjs/index.cjs",
  "module": "esm/index.js",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./cjs/index.cjs",
      "default": "./esm/index.js"
    }
  },
  "files": [
    "cjs",
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuintun/koa-files.git"
  },
  "keywords": [
    "koa",
    "send",
    "serve",
    "server",
    "static",
    "service",
    "multipart",
    "middleware"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "author": {
    "name": "nuintun",
    "email": "nuintun@qq.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuintun/koa-files/issues"
  },
  "homepage": "https://github.com/nuintun/koa-files#readme",
  "scripts": {
    "lint": "tsc --noEmit",
    "test": "node tests/index.js",
    "clean": "node tools/clean.js",
    "prepublishOnly": "pnpm build",
    "build:cjs": "rollup -c tools/rollup.cjs.js",
    "build:esm": "rollup -c tools/rollup.esm.js",
    "build:fix-types": "node tools/fix-types.js",
    "build": "pnpm clean && pnpm build:main && pnpm format",
    "format": "prettier --write . --ignore-path .prettierignore",
    "build:main": "pnpm build:cjs && pnpm build:esm && pnpm build:fix-types"
  },
  "dependencies": {
    "etag": "^1.8.1",
    "range-parser": "^1.2.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/etag": "^1.8.4",
    "@types/koa": "^3.0.1",
    "@types/node": "^24.10.1",
    "@types/range-parser": "^1.2.7",
    "dts-paths": "^1.1.15",
    "koa": "^3.1.1",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "koa": ">=2.0.0"
  }
}
