{
  "name": "koa-files",
  "version": "2.1.1",
  "description": "A static files serving middleware for koa.",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "typings": "typings/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "typings"
  ],
  "scripts": {
    "tests": "node tests",
    "lint": "tsc --noEmit",
    "clean": "node tools/clean.js",
    "prepublishOnly": "npm run build",
    "build:cjs": "rollup -c tools/rollup.cjs.js",
    "build:esm": "rollup -c tools/rollup.esm.js",
    "format": "prettier --write tools src cjs esm tests typings",
    "build": "npm run clean && npm run build:main && npm run format",
    "build:main": "npm run build:cjs && npm run build:esm && npm run build:typings",
    "build:typings": "tsc --declaration --emitDeclarationOnly --declarationDir typings"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuintun/koa-files.git"
  },
  "keywords": [
    "koa",
    "server",
    "static",
    "service",
    "send",
    "serve",
    "middleware"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "author": {
    "name": "nuintun",
    "email": "nuintun@qq.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuintun/koa-files/issues"
  },
  "homepage": "https://github.com/nuintun/koa-files#readme",
  "peerDependencies": {
    "koa": "^2.0.0"
  },
  "dependencies": {
    "destroy": "^1.2.0",
    "etag": "^1.8.1",
    "range-parser": "^1.2.1",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/destroy": "^1.0.0",
    "@types/etag": "^1.8.1",
    "@types/koa": "^2.13.4",
    "@types/range-parser": "^1.2.4",
    "koa": "^2.13.4",
    "magic-string": "^0.26.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "typescript": "^4.6.3"
  }
}